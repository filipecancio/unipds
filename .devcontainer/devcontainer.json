{
  "name": "UniPDS Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rangav.vscode-thunder-client",
        "ms-azuretools.vscode-docker",
        "meezilla.json",
        "entuent.fira-code-nerd-font",
        "beardedbear.beardedtheme",
        "pkief.material-icon-theme",
        "eamodio.gitlens",
        "kotlinlang.kotlin",
        "fwcd.kotlin",
        "mathiasfrohlich.kotlin",
        "esafirm.kotlin-formatter",
        "github.copilot",
        "github.copilot-chat",
        "github.copilot-labs",
        "github.vscode-github-actions",
        "ms-azuretools.vscode-containers",
        "swiftlang.swift-vscode",
        "python.python",
        "ms-python.vscode-pylance",
        "ms-python.python",
        "ms-python.vscode-python-envs",
        "ms-python.debugpy",
        "redhat.java",
        "vscjava.vscode-java-pack",
        "vscjava.vscode-java-debug",
        "vscjava.vscode-java-test",
        "vscjava.vscode-maven",
        "vscjava.vscode-java-dependency",
        "dart-code.dart-code",
        "formulahendry.code-runner"
      ],
      "settings": {
        "workbench.colorTheme": "Bearded Theme Coffee Reversed"
      }
    }
  },
  "postCreateCommand": "mkdir -p .vscode && cp .devcontainer/settings.json .vscode/settings.json",
  "remoteUser": "vscode"
}
